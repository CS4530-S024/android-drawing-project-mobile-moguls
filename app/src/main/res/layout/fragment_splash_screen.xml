<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/splashTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is the splash screen" />

        <Button
            android:id="@+id/mainScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Main Screen" />

        <Button
            android:id="@+id/drawScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Draw Screen" />

        <Button
            android:id="@+id/saveScreenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Save Screen" />
    </LinearLayout>
</FrameLayout>